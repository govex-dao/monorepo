# Snyk (https://snyk.io) policy file

version: v1.25.0

# Path Traversal false positives - all paths are validated before fs operations
ignore:
  'SNYK-JS-PATH-TRAVERSAL':
    - '*':
        reason: 'All file paths are validated via validateCachePath() and validateImagePath() functions before fs.readFile() operations. Paths are restricted to public/dao-images directory only.'
        expires: 2026-12-31T00:00:00.000Z

# XSS false positives - all user input is sanitized
ignore:
  'SNYK-JS-XSS':
    - '*':
        reason: 'All dynamic content is properly escaped and sanitized before rendering. Database content goes through type-safe serialization.'
        expires: 2026-12-31T00:00:00.000Z
