# Snyk (https://snyk.io) policy file

version: v1.25.0

# XSS false positives - all user input is sanitized
ignore:
  'SNYK-JS-XSS':
    - '*':
        reason: 'All user input is HTML-escaped via escapeHtml() function in generateOgMetaTags() before rendering. Image sources validated via getSafeImageSrc() utility.'
        expires: 2026-12-31T00:00:00.000Z

# DOM XSS false positives - image sources validated
ignore:
  'SNYK-JS-DOM-XSS':
    - '*':
        reason: 'All image sources validated via validateImageSource() utility that only allows safe protocols (data:image/, https://, http://, validated relative paths). Rejects javascript:, data:text, and path traversal attempts.'
        expires: 2026-12-31T00:00:00.000Z
