{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && pnpm install && pnpm build:${NETWORK:-testnet-dev}"
  },
  "deploy": {
    "startCommand": "cd backend && ./railway-deploy.sh indexer",
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "SERVICE_NAME": {
      "value": "indexer"
    },
    "DB_RESET_ON_DEPLOY": {
      "value": "false"
    },
    "PORT": {
      "value": "3002"
    }
  }
}